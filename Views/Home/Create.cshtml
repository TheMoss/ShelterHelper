@model ShelterHelper.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
				<!-- <input asp-for="Sex" class="form-control" />-->
                <span asp-validation-for="Sex" class="text-danger"></span>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.Sex, new List<SelectListItem>
                    {
                    new SelectListItem() {Text = "Unknown", Value="Unknown"},
                    new SelectListItem() {Text = "Spayed female", Value="Spayed female"},
                    new SelectListItem() {Text = "Intact female", Value="Intact female"},
                    new SelectListItem() {Text = "Spayed male", Value="Spayed male"},
                    new SelectListItem() {Text = "Intact male", Value="Intact male"}
                    })                    
				</div>
                       
               
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdmissionDay" class="control-label"></label>
                <input asp-for="AdmissionDay" class="form-control" />
                <span asp-validation-for="AdmissionDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdoptionDay" class="control-label"></label>
                <input asp-for="AdoptionDay" class="form-control" />
                <span asp-validation-for="AdoptionDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Health" class="control-label"></label>
                <input asp-for="Health" class="form-control" />
                <span asp-validation-for="Health" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
