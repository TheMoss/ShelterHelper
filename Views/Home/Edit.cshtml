@model ShelterHelper.Models.Animal

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr/>
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id"/>
			<input type="hidden" asp-for="SpeciesId"/>
			
			<div class="form-group">
				<label asp-for="Species.SpeciesName" class="control-label"></label>
				<input asp-for="Species.SpeciesName" class="form-control"/>
				<span asp-validation-for="Species" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="ChipNumber" class="control-label"></label>
				<input asp-for="ChipNumber" class="form-control"/>
				<span asp-validation-for="ChipNumber" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="Sex" class="control-label"></label>
				<div class="form-group">
					<select asp-for="Sex" class="form-control">
						<option value="" disabled selected hidden>Select option</option>
						<option value="Unknown">Unknown</option>
						<option value="Spayed female">Spayed female</option>
						<option value="Intact female">Intact female</option>
						<option value="Spayed male">Spayed male</option>
						<option value="Intact male">Intact male</option>
					</select>
				</div>
				<span asp-validation-for="Sex" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="Weight" class="control-label"></label>
				<input asp-for="Weight" class="form-control"/>
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="AdmissionDay" class="control-label"></label>
				<input asp-for="AdmissionDay" class="form-control"/>
				<span asp-validation-for="AdmissionDay" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="AdoptionDay" class="control-label"></label>
				<input asp-for="AdoptionDay" class="form-control"/>
				<span asp-validation-for="AdoptionDay" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="Health" class="control-label"></label>
				<input asp-for="Health" class="form-control"/>
				<span asp-validation-for="Health" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<label asp-for="EmployeeId" class="control-label"></label>
				<input asp-for="EmployeeId" class="form-control"/>
				<span asp-validation-for="EmployeeId" class="text-danger"></span>
			</div>
			
			<div class="form-group">
				<input type="submit" value="Save changes" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
