@model ShelterHelper.ViewModels.CreateSpeciesViewModel;
@{
	ViewData["Title"] = "Add resources";
}


<h1>Add resources</h1>
<hr />

<div class="row">
	<div class="col-md-4">
		<div class="tabs">
			<button class="tablinks" onclick="openType(event, 'Diet')" id="openDefault">Diet</button>
			<button class="tablinks" onclick="openType(event, 'Bedding')">Bedding</button>
			<button class="tablinks" onclick="openType(event, 'Toy')">Toy</button>
			<button class="tablinks" onclick="openType(event, 'Accessory')">Accessory</button>
		</div>
	</div>
</div>

<div id="Diet" class="tabcontent">
	<h4>Diet</h4>
	<form id="dietResources">
		<button type="button" class="btn btn-success add-row" onclick="cloneRow('dietRows')">Add</button><!--add new row-->
		<div class="form-group" id="dietRows">
			<div class="tabcontent-row">
				<label asp-for="SelectedDietId" class="control-label"></label> <!--dropdown with diet names-->
				<span class="select-and-button">
					<select @* asp-for="SelectedDietId" asp-items="new SelectList(Model.DietsList, nameof(Diet.DietId), nameof(Diet.DietName))" *@ class="form-control">
						<option value="" disabled selected hidden>Select option</option>
					</select>
				</span>
				<span class="form-group">
					<!--quantity to be added-->
					<label asp-for="Diet.Quantity_kg" class="control-label"></label>
					<input asp-for="Diet.Quantity_kg" class="form-control" type="number" placeholder="Insert the quantity here" />
					<span asp-validation-for="Diet.Quantity_kg" class="text-danger"></span>
				</span>
				<!--delete row-->
				<span asp-validation-for="SelectedDietId" class="text-danger"></span>				
			</div>
		</div>
		<div class="form-group">
			<input type="submit" value="Submit" class="btn btn-primary" form="dietResources" />
		</div>
	</form>
</div>

