@model ShelterHelper.Models.Diet;

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Diet</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="ConfirmEditDiet" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="DietId" />
			<div class="form-group">
				<label asp-for="DietName" class="control-label"></label>
				<input asp-for="DietName" class="form-control" />
				<span asp-validation-for="DietName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Quantity_kg" class="control-label"></label>
				<input asp-for="Quantity_kg" class="form-control" />
				<span asp-validation-for="Quantity_kg" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
